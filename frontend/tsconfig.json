{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@repositories/*": ["repositories/*"],
      "@models/*": ["models/*"],
      "@schemas/*": ["schemas/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@layouts/*": ["layouts/*"],
      "@styles/*": ["styles/*"],
      "@languages/*": ["languages/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@exceptions/*": ["exceptions/*"],
      "@helpers/*": ["helpers/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
